<AnchorPane minHeight="700.0" minWidth="1000.0" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Interface.Controllers.Admin_Order_Controller">
   <children>
      <ImageView fitHeight="710.0" fitWidth="1010.0" pickOnBounds="true" smooth="false">
         <image>
            <Image url="@../../Assets/Background.bmp" />
         </image>
      </ImageView>
      <Text fill="WHITE" layoutX="294.0" layoutY="121.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tech Market">
         <font>
            <Font name="Trebuchet MS" size="80.0" />
         </font>
      </Text>
      <Text fx:id="profile_info" fill="WHITE" layoutX="16.0" layoutY="680.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Профиль: ">
         <font>
            <Font name="Trebuchet MS" size="24.0" />
         </font>
      </Text>
      <Button fx:id="profile_exit_but" layoutX="770.0" layoutY="650.0" minHeight="30.0" minWidth="200.0" mnemonicParsing="false" onAction="#profile_exit" prefHeight="30.0" prefWidth="200.0" text="Выйти из профиля">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <Button fx:id="back_to_screen_but" layoutX="550.0" layoutY="650.0" minHeight="30.0" minWidth="200.0" mnemonicParsing="false" onAction="#back_screen" prefHeight="30.0" prefWidth="200.0" text="Назад">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <Button fx:id="add_order_but" layoutX="90.0" layoutY="195.0" minHeight="50.0" minWidth="250.0" mnemonicParsing="false" onAction="#add_order_func" text="Добавить заказ">
