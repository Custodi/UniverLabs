            <TableColumn fx:id="staff_col" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Работник" />
        </columns>
      </TableView>
      <Button fx:id="remove_elem_order_but" layoutX="90.0" layoutY="291.0" minHeight="50.0" minWidth="250.0" mnemonicParsing="false" onAction="#remove_elem_order" prefWidth="250.0" text="Удалить элемент заказа" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Trebuchet MS" size="20.0" />
         </font>
      </Button>
      <Button fx:id="remove_order_but" layoutX="90.0" layoutY="394.0" minHeight="50.0" minWidth="250.0" mnemonicParsing="false" onAction="#remove_order" prefWidth="250.0" text="Удалить заказ" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Trebuchet MS" size="20.0" />
         </font>
      </Button>
