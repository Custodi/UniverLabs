<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane minHeight="700.0" minWidth="1000.0" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Interface.Controllers.Product_Controller">
   <children>
      <ImageView fitHeight="710.0" fitWidth="1010.0" pickOnBounds="true" smooth="false">
         <image>
            <Image url="@../../Assets/Background.bmp" />
         </image>
      </ImageView>
      <Text fill="WHITE" layoutX="294.0" layoutY="121.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tech Market">
         <font>
            <Font name="Trebuchet MS" size="80.0" />
         </font>
      </Text>
      <Text fx:id="profile_info" fill="WHITE" layoutX="16.0" layoutY="680.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Профиль: ">
         <font>
            <Font name="Trebuchet MS" size="24.0" />
         </font>
      </Text>
      <Button fx:id="profile_exit" layoutX="770.0" layoutY="650.0" minHeight="30.0" minWidth="200.0" mnemonicParsing="false" onAction="#exit" prefHeight="30.0" prefWidth="200.0" text="Выйти из профиля">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <Button fx:id="but_add" layoutX="34.0" layoutY="266.0" minHeight="50.0" minWidth="250.0" mnemonicParsing="false" onAction="#add_elem" text="Добавить товар">
         <font>
            <Font name="Trebuchet MS" size="20.0" />
         </font>
      </Button>
      <Button fx:id="but_remove" layoutX="187.0" layoutY="444.0" minHeight="50.0" minWidth="250.0" mnemonicParsing="false" onAction="#delete_elem" text="Удалить товар">
         <font>
            <Font name="Trebuchet MS" size="20.0" />
         </font>
      </Button>
      <Button fx:id="back_to_menu" layoutX="550.0" layoutY="650.0" minHeight="30.0" minWidth="200.0" mnemonicParsing="false" onAction="#back" prefHeight="30.0" prefWidth="200.0" text="Назад">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <TableView fx:id="main_table" layoutX="568.0" layoutY="183.0" minHeight="420.0" minWidth="380.0" prefHeight="420.0" prefWidth="380.0">
        <columns>
          <TableColumn fx:id="id_table" editable="false" maxWidth="80.0" minWidth="80.0" text="ID" />
          <TableColumn fx:id="name_table" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" text="Название" />
            <TableColumn fx:id="price_table" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Цена" />
        </columns>
      </TableView>
      <TextField fx:id="tf_name" layoutX="348.0" layoutY="291.0" minWidth="180.0" prefWidth="180.0" promptText="Название" />
      <TextField fx:id="tf_price" layoutX="348.0" layoutY="356.0" minWidth="180.0" prefWidth="180.0" promptText="Цена" />
      <Text fx:id="error_message" fill="RED" layoutX="249.0" layoutY="567.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Ошибка" visible="false">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Text>
      <Button fx:id="but_update" layoutX="34.0" layoutY="356.0" minHeight="50.0" minWidth="250.0" mnemonicParsing="false" onAction="#update_elem" text="Редактировать товар">
         <font>
            <Font name="Trebuchet MS" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
